@model User

<div class="container-fluid p-4">
	<div class="row justify-content-center">
		<div class="col-xl-8 col-lg-12">
			<div class="row">
				<div class="col-xl-12 col-lg-12">
					<h1>Profile</h1>
					<h6 class="mb-4">People visiting your profile will see the following info</h6>

					<span>@*Exception*@</span>

					<form asp-action="Settings" method="post" asp-controller="User" class="probootstrap-form">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group mb-4">
									<div class="mx-auto" id="user-image">
										<a href="#">@Model.FirstName.ToUpper().ToCharArray()[0]</a>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="fname">First Name</label>
									<input type="text" id="fname" class="form-control" asp-for="FirstName" value="@Model.FirstName">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="lname">Last Name</label>
									<input type="text" id="lname" class="form-control" asp-for="LastName" value="@Model.LastName">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="email">Email</label>
									<input type="text" id="email" class="form-control" asp-for="Email" value="@Model.Email" disabled style="color: #495057 !important">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="username">Username</label>
									<input type="text" id="username" class="form-control" asp-for="UserName" value="@Model.UserName">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="about">About</label>
									<textarea cols="30" rows="10" id="about" class="form-control" asp-for="About" name="about" placeholder="Write interesting information about yourself"></textarea>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 d-flex justify-content-end">
								<input type="submit" class="btn btn-primary" id="submit" name="submit" value="Save">
							</div>
							<div class="col-md-6 d-flex justify-content-start">
								<input type="reset" class="btn btn-primary" id="submit" name="submit" value="Reset">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>