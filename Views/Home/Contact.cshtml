@*@model User*@

<div class="container-fluid p-4">
	<div class="row justify-content-center">
		<div class="col-xl-8 col-lg-12">
			<div class="row">
				<div class="col-xl-12 col-lg-12">
					<h1 class="mb-3">Contact</h1>

					<form action="https://formsubmit.co/photohome2023@gmail.com" method="POST" class="probootstrap-form mb-5">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="fname">First Name</label>
									<input type="text" name="name" class="form-control">
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-group">
									<label for="lname">Last Name</label>
									<input type="text" class="form-control">
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="form-control">
						</div>
						<div class="form-group mb-4">
							<label for="message">Message</label>
							<textarea cols="30" rows="10" class="form-control"></textarea>
						</div>
						<div class="form-group d-flex justify-content-end">
							<input type="submit" class="btn btn-primary" id="submit" name="submit" value="Send Message">
						</div>
					</form>
				</div>
			</div>

			<div>
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.72294835642!2d49.85108751469075!3d40.41498796367059!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403087fbef6b3dfb%3A0xc32b1d5765759234!2sSTEP%20Komp%C3%BCter%20Akademiyas%C4%B1%2C%20Baku!5e0!3m2!1sru!2s!4v1671500508288!5m2!1sru!2s"
						style="width:100%; height:400px; border:0;" allowfullscreen="" loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>
</div>
